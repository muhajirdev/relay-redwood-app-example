{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "rw dev",
    "relay": "yarn workspace web run relay"
  },
  "devDependencies": {
    "@redwoodjs/core": "^1.0.0-rc.1"
  },
  "eslintConfig": {
    "plugins": [
      "relay"
    ],
    "extends": [
      "@redwoodjs/eslint-config",
      "plugin:relay/ts-recommended"
    ],
    "root": true
  },
  "engines": {
    "node": ">=14.x <=16.x",
    "yarn": "1.x"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  },
  "dependencies": {
    "eslint-plugin-relay": "git://github.com/opencreek/eslint-plugin-relay#0c91b686ee23b3c1765ab02a537f03145fe08eb9",
    "vscode-apollo-relay": "^1.5.2"
  }
}
